	{\if#11%
		\frac{\partial #2}{\partial #3}% 偏导数\pdiff{y}{x}
	\else%
		\frac{\partial^{#1} #2}{\partial #3^{#1}}% n阶偏导数\pdiff[n]{y}{x}
	\fi}
\newcommand*{\deltadiff}[3][1]
	{\if#11%
		\frac{\delta #2}{\delta #3}% 导数\diff{y}{x}
	\else%
		\frac{\delta^{#1} #2}{\delta #3^{#1}}% n阶导数\diff[n]{y}{x}
	\fi}
